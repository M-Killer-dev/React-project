{
  "name": "reactjs-boilerplate",
  "version": "2.4.0",
  "description": "Quick setup for new React.js applications featuring Redux, hotâ€“reloading, PostCSS, react-router and Mocha.",
  "dependencies": {
    "babel-polyfill": "^6.7.2",
    "fontfaceobserver": "^1.6.4",
    "history": "^2.0.1",
    "immutable": "^3.7.6",
    "react": "^0.14.7",
    "react-dom": "^0.14.7",
    "react-pure-render": "^1.0.2",
    "react-redux": "^4.4.1",
    "react-router": "^2.0.1",
    "react-router-redux": "^4.0.0",
    "redux": "^3.3.1",
    "redux-immutable": "^3.0.6",
    "redux-saga": "^0.9.4",
    "reselect": "^2.2.1",
    "sanitize.css": "^3.3.0",
    "scroll-behavior": "^0.3.3"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.3",
    "babel-core": "^6.7.2",
    "babel-eslint": "^5.0.0",
    "babel-loader": "^6.2.4",
    "babel-plugin-react-transform": "^2.0.2",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-0": "^6.5.0",
    "chai": "^3.5.0",
    "chai-enzyme": "^0.4.1",
    "chalk": "^1.1.1",
    "cheerio": "^0.20.0",
    "coveralls": "^2.11.8",
    "css-loader": "^0.23.1",
    "enzyme": "^2.1.0",
    "eslint": "^2.4.0",
    "eslint-config-airbnb": "^6.1.0",
    "eslint-plugin-react": "^4.2.2",
    "expect": "^1.15.2",
    "expect-jsx": "^2.4.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.8.5",
    "html-loader": "^0.4.3",
    "html-webpack-plugin": "^2.10.0",
    "ip": "^1.1.2",
    "isparta": "^4.0.0",
    "isparta-loader": "^2.0.0",
    "json-loader": "^0.5.4",
    "karma": "^0.13.22",
    "karma-chrome-launcher": "^0.2.2",
    "karma-coverage": "^0.5.5",
    "karma-firefox-launcher": "^0.1.7",
    "karma-ie-launcher": "^0.2.0",
    "karma-mocha": "^0.2.2",
    "karma-mocha-reporter": "^2.0.0",
    "karma-safari-launcher": "^0.1.1",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^1.7.0",
    "lint-staged": "^0.1.1",
    "minimist": "^1.2.0",
    "mocha": "^2.4.5",
    "ngrok": "2.1.6",
    "null-loader": "^0.1.1",
    "offline-plugin": "^2.0.4",
    "plop": "^1.5.0",
    "postcss-cssnext": "^2.5.1",
    "postcss-focus": "^1.0.0",
    "postcss-loader": "^0.8.2",
    "postcss-reporter": "^1.3.3",
    "psi": "^2.0.3",
    "react-addons-test-utils": "^0.14.7",
    "shelljs": "^0.6.0",
    "sinon": "^1.17.3",
    "style-loader": "^0.13.0",
    "stylelint": "^5.0.1",
    "stylelint-config-standard": "^4.0.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.12.14",
    "webpack-dev-server": "^1.14.1"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/mxstbr/react-boilerplate.git"
  },
  "scripts": {
    "start": "NODE_ENV=development node internals/webpack/server.dev.js",
    "build": "NODE_ENV=production webpack --config internals/webpack/webpack.prod.babel.js --colors -p",
    "serve": "NODE_ENV=production node internals/webpack/server.prod.js",
    "pagespeed": "./internals/scripts/pagespeed",
    "setup": "NODE_ENV=initialisation ./internals/scripts/init",
    "clean": "shjs ./internals/scripts/clean.js",
    "generate": "plop --plopfile internals/generators/index.js",
    "prebuild": "npm run test",
    "pretest": "npm run lint",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint . --ignore-path .gitignore",
    "lint:js:staged": "eslint-staged",
    "lint:css": "stylelint ./app/**/*.css",
    "lint:css:staged": "stylelint-staged",
    "lint:staged": "npm run lint:js:staged && npm run lint:css:staged",
    "test": "NODE_ENV=test karma start internals/testing/karma.conf.js --single-run",
    "test:watch": "npm run test -- --auto-watch --no-single-run",
    "test:firefox": "npm run test -- --browsers Firefox",
    "test:safari": "npm run test -- --browsers Safari",
    "test:ie": "npm run test -- --browsers IE",
    "coveralls": "cat ./coverage/lcov/lcov.info | coveralls"
  },
  "pre-commit": "lint:staged",
  "author": "Max Stoiber",
  "license": "MIT",
  "babel": {
    "presets": [
      "es2015",
      "react",
      "stage-0"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb",
    "env": {
      "browser": true,
      "node": true,
      "mocha": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
      "comma-dangle": 2,
      "indent": [2, 2, {"SwitchCase": 1}],
      "no-console": 0,
      "react/prop-types": 0,
      "max-len": 0,
      "prefer-template": 0,
      "no-use-before-define": 0,
      "newline-per-chained-call": 0,
      "arrow-body-style": [2, "as-needed"]
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "color-hex-case": "upper",
      "string-quotes": "single",
      "indentation": 2
    }
  }
}
